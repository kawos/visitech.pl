<!DOCTYPE html>
%html(lang="pl")
  %head
    %meta(charset="utf-8")
    - if @description
      %meta(name="description" content=@description)
    - if @keywords
      %meta(name="keywords" content=@keywords)
    %title= @title
    %link(href="/static/bootstrap/css/bootstrap.css" media="screen" rel="stylesheet")
    %link(href="/static/bootstrap/css/bootstrap-responsive.css" media="screen" rel="stylesheet")
    
    <!--<![endif]-->
    /[if lte IE 6]
      %link(rel="stylesheet" href="http://universal-ie6-css.googlecode.com/files/ie6.1.1.css" media="screen, projection")
    /[if lt IE 9]
      %script(src="//html5shim.googlecode.com/svn/trunk/html5.js")
    - local_stylesheet_link_tag('local')
    %link(href="#{url('/articles.xml')}" rel="alternate" type="application/atom+xml")
    %link(href="/static/img/favicon.ico" rel="shortcut icon")
    = haml :analytics, :layout => false
  %body(data-spy="scroll" data-target=".subnav" data-offset="50")
    = haml :header, :layout => false
    = yield
    = haml :footer, :layout => false
